@using TantaneLib


<p>
    <form action="/course/create?studentID=@ViewBag.studentID" method="POST" target="@TanBlock.Block_in_Currentform("CoursesList")">
        <input type="hidden" name="StudentID" value="@ViewBag.studentID"><br>
        <table>
            <tr>
                <td>Title:</td>
                <td><input type="text" name="Title"></td>
            </tr>
            <tr>
                <td>Unit:</td>
                <td><input name="Unit" type="number" min="1"></td>
            </tr>
            <tr>
                <td>Details:</td>
                <td><input type="text" name="Details"></td>
            </tr>
        </table>
        <input type="submit" value="Create New Course">
    </form>

</p>

@TanHtmlHelper.TanLoadSubpage(null, new TanBlockFeatures()
{
    BlockName = "CoursesList",
    StaticURL = "~/student/Courses/?studentID=" + ViewBag.studentID,
    Subsequent_BlockName_to_Referesh = TanBlock.Block_in_Ancestor_Layout("totalCourseCount")

})


